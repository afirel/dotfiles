[core]
  editor = vim
  excludesfile = ~/.gitignore

[diff]
  tool = vim.diff

[include]
  path = ~/.gitidentity

[apply]
  whitespace = fix

[merge]
  log = true

[alias]
  c = commit
  cf = commit --fixup
  ca = !git add -A && git commit
  cm = commit --amend
  aa = add -A .
  save = !git add -A && git commit -m 'SAVEPOINT'
  wip = !git add -u && git commit -m "WIP"
  wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
  r = rebase -i
  s = status
  f = fetch --all
  p = push
  pf = push --force
  b = branch
  bv = branch -v
  cob = checkout -b
  co = checkout
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lg = log --graph
  ld = log -p
  ly = log --since='2 days ago'
  lgy = log -p --since='2 days ago'
  d = diff
  dc = diff --cached
  who = shortlog -s --
  merge = merge --nocommit
  undocommit = reset --soft HEAD^
  undomerge-or-pull = reset --hard
  whats-in-the-stash = stash show -p
  changelog = "whatchanged --stat --pretty=oneline --abbrev-commit --since=$1"

[color]
  ui = auto
  interactive = true
  status = true
  branch = true
  diff = true

[push]
	default = simple
[rebase]
	autosquash = true

[diff "zip"]
    textconv = unzip -p
    binary = true
[diff "gz"]
    textconv = zcat
    binary = true
[diff "bz2"]
    textconv = zcat
    binary = true
[diff "xz"]
    textconv = zcat
    binary = true
[diff "tar"]
    textconv = tar -O -xf
    binary = true
[diff "tar-bz2"]
    textconv = tar -O -xjf
    binary = true
[diff "tar-gz"]
    textconv = tar -O -xzf
    binary = true
[diff "tar-xz"]
    textconv = tar -O -xJf
    binary = true
[diff "odf"]
    textconv = odt2txt
[diff "pdf"]
    textconv = pdfinfo
[diff "bin"]
    textconv = hexdump -v -C
